@model Request


@{
    ViewBag.Title = "Create Request";
}

<form asp-controller="home" asp-action="create" method="post" class="mt-3">
    <div class="form-group row">
        <input hidden asp-for="Id" />
        <label asp-for="RequestName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RequestName" class="form-control">
            <span asp-validation-for="RequestName"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Department" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Department>()"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Status" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Status" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Status>()"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DateAccepted" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DateAccepted" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control" />
            <span asp-validation-for="DateAccepted"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" type="text" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Kreiraj</button>
            <a asp-action="Request" asp-controller="Home" class="btn btn-primary">Izađi</a>
        </div>
    </div>
</form>