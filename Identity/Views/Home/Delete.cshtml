@model Identity.ViewModels.HomeRequestsViewModel


@{
    ViewBag.Title = "Izbriši zahtev";
}

<form asp-controller="home" asp-action="Delete" method="post" class="mt-3">
    <input hidden asp-for="@Model.Request.Id" />
    <div class="form-group row">
        <label asp-for="@Model.Request.RequestName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Request.RequestName" class="form-control" placeholder="Name">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.Request.Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="@Model.Request.Department" readonly="readonly" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Department>()"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Request.Status" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="@Model.Request.Status" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Status>()"></select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Request.DateAccepted" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Request.DateAccepted" type="date" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Request.Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Request.Description" type="text" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <a asp-action="DeleteConfirmation" asp-controller="Home" asp-route-id="@Model.Request.Id" class="btn btn-danger">Izbriši</a>
            <a asp-action="Request" asp-controller="Home" class="btn btn-primary">Izađi</a>
        </div>
    </div>
</form>